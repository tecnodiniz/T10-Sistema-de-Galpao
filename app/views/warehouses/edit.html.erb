<h1>Editar</h1>

<% if @warehouse.errors.any?%>
<ul>
    <% @warehouse.errors.full_messages.each do |msg|%>
        <li><%= msg%></li>
    <%end%>
</ul>
<%end%>
<%= form_with model: @warehouse do |f|%>
    <%= f.label :name%>
    <%= f.text_field :name %>
    <%= f.label :description%>
    <%= f.text_area :description %>
    <%= f.label :code%>
    <%= f.text_field :code %>
    <%= f.label :city%>
    <%= f.text_field :city %>
    <%= f.label :area, 'Área' %>
    <%= f.number_field :area %>
    <%= f.label :address %>
    <%= f.text_field :address %>
    <%= f.label :cep %>
    <%= f.text_field :cep %>
    <%= f.submit  %>
<%end%>